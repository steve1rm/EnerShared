<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivBillingProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tvBillingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/name_margin_start"
        android:layout_gravity="center_vertical"
        tools:text="Jason Blog"/>

    <TextView
        android:id="@+id/tvBillingPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/name_margin_start"
        android:layout_gravity="center_vertical"
        tools:text="7.5"/>

    <TextView
        android:id="@+id/tvBillingAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/name_margin_start"
        android:layout_gravity="center_vertical"
        tools:text="20"/>

    <TextView
        android:id="@+id/tvBillingTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/name_margin_start"
        android:layout_gravity="center_vertical"
        tools:text="150"/>

</LinearLayout>